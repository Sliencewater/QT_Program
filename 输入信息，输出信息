//QT中提取QTextEdit文本框中的内容，代码如下
int a[100];
    QString str = ui->textEdit->toPlainText();
    int len = str.length();
    for(int i = 0; i < len; ++i)
    {
        QChar t = str.at(i);
        a[i] = t.toAscii() - '0';
    }
//textEdit的数据合理性以及数组大小自己去设定


